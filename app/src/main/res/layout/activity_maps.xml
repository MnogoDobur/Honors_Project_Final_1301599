<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/testerrbackground">
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_column="0"
        android:layout_row="0"
        tools:context="com.example.user.honor.MapsActivity" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/exploreMissions"
            android:layout_width="74dp"
            android:layout_height="35dp"
            android:layout_column="0"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="10dp"
            android:layout_row="0"
            android:background="@drawable/blue"
            android:text="Explore Missions"
            android:textSize="10dp"
            tools:text="Explore Missions" />

        <Button
            android:id="@+id/play"
            android:layout_width="74dp"
            android:layout_height="35dp"
            android:layout_column="0"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="16dp"
            android:layout_row="0"
            android:background="@drawable/blue"
            android:text="Play"
            android:textSize="10dp"
            tools:text="Play" />
        <TextView
            android:id="@+id/creditsMapActivity"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/highScoreMapActivity"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="105dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            />

    </GridLayout>
    <ListView
        android:id="@+id/detected_activities_listview_final"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</TableLayout>
